// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  firstName    String?
  lastName     String?
  emailAddress String   @unique
  phoneNumber  String?

  @@index([emailAddress], name: "emailAddress")
}

model Quote {
  id                          String   @id @default(uuid())
  createdAt                   DateTime @default(now())
  updatedAt                   DateTime @updatedAt
  quoteNumber                 Int      @unique @default(autoincrement())
  pickupDate                  String
  pickupTime                  String
  isRoundTrip                 Boolean  @default(false)
  returnPickupDate            String?
  returnPickupTime            String?
  originFormattedAddress      String
  originName                  String
  originPlaceId               String
  startLat                    Float
  startLng                    Float
  destinationFormattedAddress String
  destinationName             String
  destinationPlaceId          String
  endLat                      Float
  endLng                      Float
  vehicleTypeLabel            String
  vehicleTypeValue            Int
  serviceTypeLabel            String
  serviceTypeValue            Int
  passengersLabel             String
  passengersValue             Int
  isItHourly                  Boolean  @default(false)
  hoursLabel                  String?
  hoursValue                  Float?
  distanceText                String?
  distanceValue               Float
  durationText                String?
  durationValue               Float
  calculatedDistance          Float
  baseRate                    Float?
  fuelSurcharge               Float?
  gratuity                    Float?
  HST                         Float?
}
