// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  firstName    String?
  lastName     String?
  emailAddress String   @unique
  phoneNumber  String?
  quotes       Quote[]
}

model Quote {
  id                          Int      @id @unique @default(autoincrement())
  createdAt                   DateTime @default(now())
  updatedAt                   DateTime @updatedAt
  pickupDate                  String?  @db.VarChar(20)
  pickupTime                  String?  @db.VarChar(20)
  isRoundTrip                 Boolean  @default(false)
  returnPickupDate            String?  @db.VarChar(20)
  returnPickupTime            String?  @db.VarChar(20)
  originFormattedAddress      String   @db.VarChar(200)
  originName                  String   @db.VarChar(200)
  originPlaceId               String   @db.VarChar(200)
  startLat                    Float
  startLng                    Float
  destinationFormattedAddress String   @db.VarChar(200)
  destinationName             String   @db.VarChar(200)
  destinationPlaceId          String   @db.VarChar(200)
  endLat                      Float
  endLng                      Float
  vehicleTypeLabel            String   @db.VarChar(200)
  vehicleTypeValue            Int
  serviceTypeLabel            String   @db.VarChar(200)
  serviceTypeValue            Int
  passengersLabel             String?  @db.VarChar(200)
  passengersValue             Int?
  isItHourly                  Boolean  @default(false)
  hoursLabel                  String?  @db.VarChar(200)
  hoursValue                  Float?
  distanceText                String?  @db.VarChar(200)
  distanceValue               Float?
  durationText                String?  @db.VarChar(200)
  durationValue               Float?
  calculatedDistance          Float?
  baseRate                    Float?
  fuelSurcharge               Float?
  gratuity                    Float?
  HST                         Float?
  User                        User?    @relation(fields: [userId], references: [id])
  userId                      Int?
}
